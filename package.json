{
    "name": "@alekseew/me",
    "version": "0.0.3",
    "description": "Project to generate a (web) app about me, Michael Alekseew, developer [blog, CV, and more topics...].",
    "author": "Michael Alekseew",
    "license": "MIT",
    "keywords": [
        "about-me",
        "blog",
        "CV",
        "michael",
        "alekseew",
        "developer",
        "web",
        "app",
        "angular",
        "giflow",
        "typescript",
        "angular-material",
        "angular-cdk",
        "prettier",
        "standard-version",
        "commitizen",
        "husky",
        "lottie",
        "lottie-web",
        "animations",
        "server-side-rendering",
        "ssr",
        "angular-universal",
        "firebase"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Mischa1610/alekseew.git"
    },
    "bugs": {
        "url": "https://github.com/Mischa1610/alekseew/issues"
    },
    "homepage": "https://github.com/Mischa1610/alekseew#readme",
    "engines": {
        "node": ">=8.11.3",
        "npm": ">=5.6.0"
    },
    "scripts": {
        "preinstall": "test -d .git/hooks || mkdir -v .git/hooks",
        "postinstall": "npm run prepare-git-commit-template && wip with commitizen && cd webapp && npm install",
        "prepare-git-commit-template": "echo '<type:[feat,fix,docs,style,refactor,perf,test,build,chore]>(<scope?>): <subject>\n\n<body?>\n\n<footer?>' > .gitmessage.txt && git config commit.template $PWD/.gitmessage.txt",
        "format-staged": "pretty-quick --staged",
        "format-check": "prettier --config ./.prettierrc --list-different './**/*{.ts,.js,.json,.css,.scss}'",
        "commit-wip": "wip",
        "commit-squash": "naenae",
        "commit": "git-cz",
        "test": "cd webapp && npm run test",
        "release": "standard-version",
        "git-clean-repo": "git clean -fdx && git submodule foreach git clean -fdx",
        "clean-project": "mv .idea ../ && npm run git-clean-repo && mv ../.idea ./"
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -e $GIT_PARAMS",
            "pre-commit": "run-s format-staged"
        }
    },
    "dependencies": {},
    "devDependencies": {
        "@commitlint/cli": "^7.0.0",
        "@commitlint/config-conventional": "^7.0.1",
        "commitizen": "^2.10.1",
        "cz-conventional-changelog": "^2.1.0",
        "husky": "^0.14.3",
        "npm-run-all": "^4.1.3",
        "prettier": "^1.13.7",
        "pretty-quick": "^1.6.0",
        "standard-version": "^4.4.0",
        "wip": "^1.3.0"
    }
}
